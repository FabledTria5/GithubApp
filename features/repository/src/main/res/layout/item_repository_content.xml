<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="?android:selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/contentIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_folder" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/contentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/contentIcon"
        app:layout_constraintStart_toEndOf="@+id/contentIcon"
        app:layout_constraintTop_toTopOf="@+id/contentIcon"
        tools:text="gradle/wrapper" />

</androidx.constraintlayout.widget.ConstraintLayout>